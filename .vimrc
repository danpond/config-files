set ic           " ignore case for search
set smartcase    " Override ignore case if upper case character used
set hls          " Highlight search term
set incsearch    " Incremental search
set showmatch    " Show matching bracket
set ruler        " Display telemetry in cmd bar
syntax enable    " Highlight syntax
set nocompatible " Allow Vim to use its power
set backspace=2  " allow backspace to cross line-endings
set shiftwidth=4 " Indents for autos
set tabstop=4    " Tab = 4 spaces
set lbr          " break long lines
set ai           " Auto indent
set si           " Smart indent
set wrap	     " Wrap long lines
set cul          " Cursorline
